<!doctype html>
<html>
  <head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no"/>
    <title><%= @form.title %></title>
    <script type="text/javascript" src="/allsites/js/jQuery-v1.9.0.js"></script>
    <link href="/allsites/style/template_style.css" rel="stylesheet" type="text/css"/>
  </head>

  <body>
  <article style="margin-bottom: 50px">
    <section class="transit_text">
      <p><%= @submit_redirect.message %></p>
    </section>
    <section class="key">
      <ul>
        <% if @submit_redirect.address.present? %>
          <li><a href="http://api.map.baidu.com/geocoder?address=' + <%= @submit_redirect.address %> + '&output=html" class="adress"><span class="adress_icon"><%= @submit_redirect.address %></span></a></li>
        <% end %>
        <% if @submit_redirect.phone.present? %>
          <li><a href="tel:<%= @submit_redirect.phone %>" class="phone"><span class="phone_icon"><%= @submit_redirect.phone %></span></a></li>
        <% end %>
      </ul>
    </section>
  </article>
  <%= raw page_footer(@site) %>
</body>
<script type="text/javascript" src="/allsites/js/template_main.js"></script>
</html>
